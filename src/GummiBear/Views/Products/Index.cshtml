@{
    ViewData["Title"] = "Gummi Bear Kingdom";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@model IEnumerable<GummiBear.Models.Product>


<h2>Products</h2>


<div class="row">
    @foreach (var product in Model)
    {
        <div class="product-list-content col-xs-4">
            <h3>@Html.ActionLink((string)product.Name, "Details", new { id = product.ProductId })</h3>
            <p>$@product.Cost.00</p>
            <img class="product-image" src="@product.Picture" />
        </div>

    }
</div>

<br />
<h3>@Html.ActionLink("Add a new product", "Create")</h3>
