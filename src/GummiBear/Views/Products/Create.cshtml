@{
    ViewData["Title"] = "Gummi Bear Kingdom";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model GummiBear.Models.Product


<h2>Add a new product</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })

    @Html.LabelFor(model => model.Cost)
    @Html.TextBoxFor(model => model.Cost, new { @type = "number", @class = "form-control" })

    <label>Country of Origin</label>
    @Html.TextBoxFor(model => model.CountryOrigin, new { @class = "form-control" })

    <label>Picture URL</label>
    @Html.TextBoxFor(model => model.Picture, new { @class = "form-control" })
    <br />
    <input type="submit" class="btn btn-success" value="Add new product" />
}

<br />
<p>@Html.ActionLink("Back to product list", "Index")</p>
